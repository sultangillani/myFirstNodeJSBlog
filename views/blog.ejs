<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <%- include('./partials/head') %>

  <title>Blog</title>
  
  <style>
    body {
      background: #f8f9fa;
      font-family: "Poppins", sans-serif;
    }
    .blog-header {
      background: linear-gradient(90deg, #0d6efd, #6610f2);
      color: white;
      padding: 40px 20px;
      text-align: center;
      border-radius: 0 0 30px 30px;
    }
    .blog-header h1 {
      font-weight: 700;
    }
    .blog-meta {
      font-size: 0.9rem;
      color: #ddd;
    }
    .blog-card {
      background: #fff;
      border-radius: 15px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
      overflow: hidden;
      margin-top: -40px;
      position: relative;
      z-index: 2;
    }
    .blog-card img {
      max-height: 400px;
      object-fit: cover;
      width: 100%;
    }
    .blog-body {
      padding: 30px;
    }
    .blog-body p {
      line-height: 1.8;
      font-size: 1.05rem;
      color: #333;
    }
    .btn-custom {
      background: linear-gradient(90deg, #0d6efd, #6610f2);
      border: none;
      color: #fff;
      font-weight: bold;
      border-radius: 8px;
      transition: 0.3s;
    }
    .btn-custom:hover {
      opacity: 0.9;
    }

    .comments-wrapper { max-width:800px; margin:40px auto; }
    .comment-card{max-width:720px;margin:6vh auto;background:#fff;border-radius:16px;
      box-shadow:0 10px 30px rgba(0,0,0,.07);border:1px solid #e9ecef}
    .comment-card .card-header{border-radius:16px 16px 0 0;background:linear-gradient(90deg,#0d6efd,#6610f2);color:#fff}
    .btn-gradient{background:linear-gradient(90deg,#0d6efd,#6610f2);border:none}
    .btn-gradient:hover{opacity:.9}
    .form-control{border-radius:12px}
    .helper{font-size:.9rem;color:#6c757d}

    .comment-box { background:#fff; border-radius:12px; padding:20px; margin-bottom:15px; 
      box-shadow:0 5px 20px rgba(0,0,0,0.05);}
    .comment-author { font-weight:600; }
    .comment-time { font-size:0.85rem; color:#6c757d; }
    .comment-text { margin-top:8px; }
  </style>
</head>
<body>
<!-- Navbar -->
<%- include('./partials/nav') %>

    <% if(locals.blog) { %>
        <!-- Blog Header -->
        <div class="blog-header">
            <h1><%= blog.title %></h1>
            <div class="blog-meta">By <%= blog.createdBy.fullName %> • <%= blog.createdAt %></div>
        </div>
    <% } %>

    <!-- Blog Card -->
    <div class="container my-5">
        <% if(locals.blog) { %>
            
            <div class="blog-card">
                <!-- Cover Image 
                <img src="https://picsum.photos/1200/400" alt="Blog Cover">-->
                <img src="<%= blog.coverImageURL %>" alt="Blog Cover">
                
                <!-- Blog Content -->
                <div class="blog-body">
                  <div class="d-flex align-items-center mb-3">
                    <div class="flex-shrink-0">
                      <img src="<%= blog.createdBy.profileImageUrl %>" style="width: 50px">
                    </div>
                    <div class="flex-grow-1 ms-3">
                      <%= blog.createdBy.fullName %>
                    </div>
                  </div>
                  
                  <%= blog.body %>
                  <!-- Back Button -->
                  <div class="mt-5">
                      <a href="/" class="btn btn-custom">← Back to Blogs</a>
                  </div>
                </div>
            </div>
        <% } %>
    </div>

    <% if(locals.user && locals.blog) { %>
      <%- include('./partials/comment') %>
    <% } %>
<%- include('./partials/scripts') %>
</body>
</html>
